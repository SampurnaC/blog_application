
<div class="container">
    <div class="row mt-5">
      <div class="col-md-10">
        <% @posts.each do |post| %>

          <p><strong> Title:  <%= link_to "#{post.title}", post_path(post) %></p></strong>
          <p>Content:<%= post.content %></p>
          <p>Author:<%= post.user.email %></p>
          <hr>
        <% end %>

      </div>
      <div class="col-md-2">
        <h2>Categories</h2>
        <% @categories.each do |category| %>
          <p><%= category.name %></p>
        <% end %>       
      </div>
    </div>
  </div>
