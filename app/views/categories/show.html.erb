<div class="container">
<div class="row mt-5">
  <div class="col-md-10">
    <h2>All posts for <%= @category.name %> Category</h2> 
    <% @posts.each do |post| %>
      <p><strong> Title:  <%= link_to "#{post.title}", post_path(post) %></p></strong>
      <p>Content:<%= post.content %></p>
      <p>Author:<%= post.user.email %></p>
      <hr>
    <% end %>
  </div>
  <%= render partial: 'categories/all_categories' %>

</div>
</div>
