

<div class="row justify-content-center mt-3">
    <div class="col-md-5 col-sm-12 position-relative">
            <p>Name:<%= @profile.name %></p>
            <p>Bio:<%= @profile.bio %></p>
            <%= link_to "Edit Profile", edit_profile_path(@profile), class: "btn btn-warning" %>

    </div>
</div>



<% @posts.each do |post| %>
    <div class="row justify-content-center mt-3">
        <div class="col-md-5 col-sm-12 border-bottom position-relative">
            <h2 class="border-bottom">All Posts</h2>
            <p><strong> Title:  <%= link_to "#{post.title}", post_path(post) %></p></strong>
            <p>Content:<%= post.content %></p>
            <p>Author:<%= post.user.email %></p>

        </div>
    </div>


<% end %>


